<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_2196F3"
    android:paddingLeft="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="@dimen/activity_half_vertical_margin">

        <LinearLayout
            android:id="@+id/menu_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_half_vertical_margin"
            android:layout_marginBottom="@dimen/activity_half_vertical_margin"
            android:paddingLeft="@dimen/activity_half_vertical_margin"
            android:gravity="left|center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_menu_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginLeft="@dimen/activity_vertical_margin"/>

            <com.ad.sample.ui.widget.RobotoLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:text="@string/menu_home"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_half_vertical_margin"
            android:layout_marginBottom="@dimen/activity_half_vertical_margin"
            android:paddingLeft="@dimen/activity_half_vertical_margin"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:text="@string/hello_blank_fragment">

            <ImageView
                android:id="@+id/img_menu_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginLeft="@dimen/activity_vertical_margin" />

            <com.ad.sample.ui.widget.RobotoLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:text="@string/menu_notification"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_my_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_half_vertical_margin"
            android:layout_marginBottom="@dimen/activity_half_vertical_margin"
            android:paddingLeft="@dimen/activity_half_vertical_margin"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:text="@string/hello_blank_fragment">

            <ImageView
                android:id="@+id/img_menu_my_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginLeft="@dimen/activity_vertical_margin" />

            <com.ad.sample.ui.widget.RobotoLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:text="@string/menu_my_balance"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_half_vertical_margin"
            android:layout_marginBottom="@dimen/activity_half_vertical_margin"
            android:paddingLeft="@dimen/activity_half_vertical_margin"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:text="@string/hello_blank_fragment">

            <ImageView
                android:id="@+id/img_menu_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginLeft="@dimen/activity_vertical_margin" />

            <com.ad.sample.ui.widget.RobotoLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:text="@string/menu_history"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_half_vertical_margin"
            android:layout_marginBottom="@dimen/activity_half_vertical_margin"
            android:paddingLeft="@dimen/activity_half_vertical_margin"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:text="@string/hello_blank_fragment">

            <ImageView
                android:id="@+id/img_menu_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginLeft="@dimen/activity_vertical_margin" />

            <com.ad.sample.ui.widget.RobotoLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:text="@string/menu_help"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_my_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_half_vertical_margin"
            android:layout_marginBottom="@dimen/activity_half_vertical_margin"
            android:paddingLeft="@dimen/activity_half_vertical_margin"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:text="@string/hello_blank_fragment">

            <ImageView
                android:id="@+id/img_menu_my_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginLeft="@dimen/activity_vertical_margin" />

            <com.ad.sample.ui.widget.RobotoLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:text="@string/menu_my_account"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
