<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_vertical_margin"
    tools:context="com.qwash.washer.ui.fragment.PrepareOrderFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_select_vehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.qwash.washer.ui.widget.RobotoBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_vehicle"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageView
                android:id="@+id/vehicle_image"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:adjustViewBounds="true"
                android:src="@drawable/mobil"

                />

            <com.qwash.washer.ui.widget.RobotoBoldTextView
                android:id="@+id/vehicle_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Honda\nJazz 1.5 AT 2012" />
        </LinearLayout>

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/btn_pick_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:text="{entypo-chevron-with-circle-right}"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blue_2196F3"
            android:textStyle="bold" />
    </FrameLayout>


    <!--TextView layout Main Menu TextView-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal">


        <com.qwash.washer.ui.widget.RobotoRegularButton
            android:id="@+id/btn_cancel"
            style="@style/btn_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/button_cancel" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/indicator_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="{mdi-checkbox-blank-circle}"
                android:textColor="@color/blue_2196F3"
                android:layout_marginRight="10dp"/>


            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/indicator_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="{mdi-checkbox-blank-circle}"
                android:textColor="@color/blue_2196F3"
                android:layout_marginLeft="10dp"/>


        </LinearLayout>

        <com.qwash.washer.ui.widget.RobotoRegularButton
            android:id="@+id/btn_next"
            style="@style/btn_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/button_next" />

    </LinearLayout>
</LinearLayout>