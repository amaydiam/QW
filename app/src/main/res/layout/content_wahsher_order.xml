<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/kiri"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="vertical"
            app:layout_widthPercent="40%">

            <agency.tango.android.avatarview.views.AvatarView
                android:id="@+id/image_washer"
                android:layout_width="@dimen/image_washer_size"
                android:layout_height="@dimen/image_washer_size"
                app:av_border_color="@android:color/white"
                app:av_border_width="4dp"
                app:av_text_size_percentage="35" />

            <com.ad.sample.ui.widget.RobotoBoldTextView
                android:id="@+id/whaser_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_half_vertical_margin"
                android:layout_marginTop="@dimen/activity_half_vertical_margin"
                android:text="Fachri" />

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/rating_whaser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{entypo-star-outlined} 4.7" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/kanan"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_toRightOf="@id/kiri"
            app:layout_widthPercent="60%">

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/content"
                android:layout_alignTop="@+id/content"
                android:background="@color/grey" />

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:gravity="center|left"
                android:orientation="vertical">

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/book_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="{fa-calendar} Wed, 23 September 2015" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/book_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_half_vertical_margin"
                    android:text="{entypo-clock} 10:20:45" />

                <com.ad.sample.ui.widget.RobotoRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:gravity="center"
                    android:text="@string/harga_total"
                    android:textColor="@color/grey" />

                <com.ad.sample.ui.widget.RobotoBoldTextView
                    android:id="@+id/bill_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_2196F3"
                    android:textSize="34sp" />
            </LinearLayout>
        </RelativeLayout>

    </android.support.percent.PercentRelativeLayout>

</LinearLayout>