<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/wallpaper_car_wash"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:gravity="center">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/logowasher" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <com.qwash.washer.ui.widget.RobotoRegularButton
                android:id="@+id/sign_in_washer"
                style="@style/btn_accent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/button_login"/>


            <com.qwash.washer.ui.widget.RobotoRegularTextView
                android:textSize="14sp"
                android:id="@+id/create_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sign_in_washer"
                android:gravity="center"
                android:text="@string/create_account_ni_m_new_washers"
                android:textAlignment="center"
                android:textColor="@color/white"
                 />


        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

