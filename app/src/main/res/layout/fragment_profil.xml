<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qwash.washer.ui.fragment.ProfilFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_1E87DA">

        <LinearLayout
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_toLeftOf="@+id/center"
            android:gravity="center"
            android:orientation="vertical">

            <com.qwash.washer.ui.widget.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="20x"
                android:textColor="@color/orange_FFEB3B"
                android:textSize="30sp"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

            <com.qwash.washer.ui.widget.RobotoLightTextView
                android:id="@+id/change_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_halft_vertical_margin"
                android:layout_marginTop="@dimen/activity_halft_vertical_margin"
                android:gravity="center"
                android:text="IDR 10000000"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <com.qwash.washer.ui.widget.RobotoLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="YOUR TOTAL BALANCE"
                android:textColor="@color/white_DFF0FC"
                android:textSize="14sp"
                android:layout_marginBottom="@dimen/activity_vertical_margin" />
        </LinearLayout>

        <View
            android:id="@+id/center"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/right"
            android:layout_alignTop="@+id/right"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/center"
            android:layout_alignBottom="@+id/right"
            android:layout_alignTop="@+id/right"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_halft_vertical_margin"
                    android:layout_marginTop="@dimen/activity_halft_vertical_margin"
                    android:gravity="center"
                    android:text="{fa-star}"
                    android:textColor="@color/orange_FFEB3B"
                    android:textSize="30sp" />

                <com.qwash.washer.ui.widget.RobotoLightTextView
                    android:layout_marginLeft="@dimen/activity_halft_vertical_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_halft_vertical_margin"
                    android:layout_marginTop="@dimen/activity_halft_vertical_margin"
                    android:gravity="center"
                    android:text="4.5"
                    android:textColor="@color/white"
                    android:textSize="30sp" />
            </LinearLayout>

            <com.qwash.washer.ui.widget.RobotoLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="YOUR CURRENT RATING"
                android:textColor="@color/white_DFF0FC"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
<LinearLayout
    android:id="@+id/layout_available_for_job"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Switch
        android:clickable="false"
        android:id="@+id/available_for_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="Available for Job"
        android:textColor="@color/black_777777"/>
</LinearLayout>
    <Switch
        android:id="@+id/available_for_vaccum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:text="Available Vaccum"
        android:textColor="@color/black_777777" />
</LinearLayout>
