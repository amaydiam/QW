<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="com.qwash.washer.ui.fragment.ProfilFragment">
<LinearLayout
    android:id="@+id/status_connection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" />
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_half_vertical_margin"
            android:gravity="center"
            android:orientation="vertical">

            <com.qwash.washer.ui.widget.RobotoRegularTextView
                android:id="@+id/change_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="IDR 10000000"
                android:textColor="@color/orange"
                android:textSize="25sp" />

            <com.qwash.washer.ui.widget.RobotoLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="BALANCE"
                android:textSize="14sp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/activity_half_vertical_margin"
            android:layout_marginRight="@dimen/activity_half_vertical_margin"
            android:background="@color/divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/center"
                android:gravity="center"
                android:orientation="vertical">

                <com.qwash.washer.ui.widget.RobotoRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_half_vertical_margin"
                    android:gravity="center"
                    android:text="20x"
                    android:textColor="@color/orange"
                    android:textSize="25sp" />

                <com.qwash.washer.ui.widget.RobotoLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_half_vertical_margin"
                    android:gravity="center"
                    android:text="WASH"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:id="@+id/center"
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/right"
                android:layout_alignTop="@+id/right"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/activity_half_vertical_margin"
                android:layout_marginTop="@dimen/activity_half_vertical_margin"
                android:background="@color/divider" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/center"
                android:gravity="center"
                android:orientation="vertical">

                <com.qwash.washer.ui.widget.RobotoRegularTextView
                    android:id="@+id/rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_half_vertical_margin"
                    android:gravity="center"
                    android:text="4.5"
                    android:textColor="@color/orange"
                    android:textSize="25sp" />

                <com.qwash.washer.ui.widget.RobotoLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_half_vertical_margin"
                    android:gravity="center"
                    android:text="RATE"
                    android:textSize="14sp" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/activity_half_vertical_margin"
            android:layout_marginRight="@dimen/activity_half_vertical_margin"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_half_vertical_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.github.zagum.switchicon.SwitchIconView
                    android:id="@+id/available_for_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    app:si_animation_duration="500"
                    app:si_disabled_alpha=".5"
                    app:si_disabled_color="@color/disabled"
                    app:si_enabled="false"
                    app:si_tint_color="@color/green_4CAF50"
                    app:srcCompat="@drawable/ic_power"/>

                <com.qwash.washer.ui.widget.RobotoLightTextView
                    android:id="@+id/desc_available_for_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="desc_available_for_job"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="800dp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</LinearLayout>