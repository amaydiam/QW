<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_half_vertical_margin"
    android:clickable="true"
    android:padding="@dimen/activity_vertical_margin"
    android:orientation="horizontal">



            <ImageView
                android:id="@+id/img_additional_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true" />

            <com.ad.sample.ui.widget.RobotoRegularTextView
                android:id="@+id/additional_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black_424242"
                tools:text="vehicle_model" />
</LinearLayout>
